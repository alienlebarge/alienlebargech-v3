{
  "name": "alienlebarge.ch",
  "version": "3.0.0",
  "description": "The personal website of Cédric Aellen",
  "scripts": {
    "prebuild": "rm -rf www && mkdir -p www/assets",
    "build:files": "eleventy --config=lib/eleventy.config.js",
    "build:styles": "postcss src/assets/styles/style.css -o www/assets/styles/style.css --config lib/postcss.config.js",
    "build:vectors": "svgo -f src/assets/vectors -o www/assets/vectors",
    "build": "npm-run-all build:*",
    "postbuild": "webmention www/feed.xml --limit 1 --send",
    "watch:files": "eleventy --config=lib/eleventy.config.js --quiet --serve",
    "watch:styles": "chokidar \"src/assets/styles/*.*\" -c \"npm run build:styles\" --initial",
    "watch:vectors": "chokidar \"src/assets/vectors/*.*\" -c \"npm run build:vectors\" --initial",
    "watch": "npm-run-all --parallel watch:*",
    "lint:markdown": "markdownlint src/**/*.md",
    "lint:styles": "stylelint src/**/*.css",
    "lint:scripts": "xo '**/*.js'",
    "lint": "npm-run-all lint:*",
    "debug": "DEBUG=* npx eleventy --config=lib/eleventy.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alienlebarge/alienlebargech-v3.git"
  },
  "keywords": [
    "personal-website"
  ],
  "author": "Cédric Aellen",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/alienlebarge/alienlebargech-v3/issues"
  },
  "homepage": "https://github.com/alienlebarge/alienlebargech-v3#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@remy/webmention": "^1.4.5",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.12",
    "eleventy-plugin-embed-everything": "^1.13.3",
    "html-minifier": "^4.0.0",
    "https-proxy-agent": "^5.0.0",
    "markdown-it": "^12.2.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-attrs": "^4.1.0",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-table-of-contents": "^0.6.0",
    "moment-timezone": "^0.5.34",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.0.2",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-selectors": "^6.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-logical": "^5.0.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-selector-matches": "^4.0.0",
    "sanitize-html": "^2.6.0",
    "svgo": "^2.8.0",
    "uslug": "^1.0.4"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@alienlebarge/stylelint-config": "^3.1.5",
    "chokidar-cli": "^3.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.0.3",
    "lodash": "^4.17.21",
    "markdownlint-cli": "^0.30.0",
    "node-fetch": "^2.6.6",
    "stylelint": "^14.1.0",
    "xo": "^0.46.4"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:import/errors",
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "import",
      "jsdoc"
    ],
    "envs": "browser",
    "ignores": [
      "www/**"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "properties": "never"
        }
      ],
      "import/extensions": [
        "error",
        "always"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src/",
            "lib/"
          ]
        }
      }
    }
  }
}
