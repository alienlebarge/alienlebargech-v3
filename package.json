{
  "name": "alienlebarge.ch",
  "version": "3.0.0",
  "description": "The personal website of Cédric Aellen",
  "scripts": {
    "prebuild": "rm -rf www && mkdir -p www/assets",
    "build:files": "eleventy --config=lib/eleventy.config.js --quiet",
    "build:styles": "postcss src/assets/styles/style.css -o www/assets/styles/style.css --config lib/postcss.config.js",
    "build": "concurrently -c \"auto\" \"npm:build:*\"",
    "postbuild": "webmention www/feed.xml --limit 1 --send",
    "watch:files": "eleventy --config=lib/eleventy.config.js --quiet --serve",
    "watch:styles": "chokidar \"src/assets/styles/*.*\" -c \"npm run build:styles\" --initial",
    "watch": "concurrently -c \"auto\" \"npm:watch:*\"",
    "lint:markdown": "markdownlint src/**/*.md",
    "lint:styles": "stylelint src/**/*.css",
    "lint:scripts": "xo '**/*.js'",
    "lint": "concurrently -c \"auto\" \"npm:lint:*\"",
    "debug": "DEBUG=* npx eleventy --config=lib/eleventy.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alienlebarge/alienlebargech-v3.git"
  },
  "keywords": [
    "personal-website"
  ],
  "author": "Cédric Aellen",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/alienlebarge/alienlebargech-v3/issues"
  },
  "homepage": "https://github.com/alienlebarge/alienlebargech-v3#readme",
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@remy/webmention": "^1.4.5",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cssnano": "^5.1.14",
    "eleventy-plugin-embed-everything": "^1.15.0",
    "html-minifier": "^4.0.0",
    "https-proxy-agent": "^5.0.1",
    "markdown-it": "^13.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.6.6",
    "markdown-it-attribution": "^0.1.4",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-image-figures": "^2.1.1",
    "markdown-it-mentions": "^1.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "moment-timezone": "^0.5.40",
    "netlify-plugin-11ty": "^1.3.0",
    "postcss-cli": "^10.1.0",
    "postcss-custom-media": "^9.1.2",
    "postcss-easy-import": "^4.0.0",
    "postcss-extend-rule": "^4.0.0",
    "postcss-media-minmax": "^5.0.0",
    "sanitize-html": "^2.9.0",
    "uslug": "^1.0.4"
  },
  "devDependencies": {
    "@alienlebarge/stylelint-config": "^3.1.6",
    "chokidar-cli": "^3.0.0",
    "eslint-plugin-jsdoc": "^39.8.0",
    "lodash": "^4.17.21",
    "markdownlint-cli": "^0.33.0",
    "node-fetch": "^3.3.0",
    "stylelint": "^14.16.1",
    "xo": "^0.53.1"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "envs": "browser",
    "ignores": [
      "www/**"
    ],
    "rules": {
      "camelcase": [
        "warn",
        {
          "properties": "never"
        }
      ],
      "node/prefer-global/process": [
        "error",
        "always"
      ],
      "unicorn/prefer-module": 0
    }
  }
}
