<article class="o-with-sidebar | h-entry" data-type="articles">
    {%- if item.data.date -%}
    <footer class="c-footer u-reference">
        <dl class="o-stack o-stack--space-3xs">
            <dt class="u-visually-hidden">Published on</dt>
            <dd>
                <a class="u-url" rel="bookmark" href="{{ item.url | url }}">
                {#- TODO: use src/_data/dates.json to format the date. -#}
                    <time class="dt-published"
                          datetime="{{ item.data.date | date }}">
                        <span>{{ item.data.date | date("DD MMM YYYY") }}</span>
                    </time>
                </a>
            </dd>
        </dl>
    </footer>
    {%- endif -%}

    <div>
        {%- if item.data.title -%}
        <header class="o-prose | e-content p-name">
            <h3><a href="{{ item.url | url }}">{{ item.data.title }}</a></h3>
        </header>
        {%- endif -%}

        {%- if item.data.summary or item.data.description -%}
        <div class="o-prose | e-content p-summary">
            <p>
            {%- if item.data.summary -%}
            {{ item.data.summary }}
            {%- elif item.data.description -%}
            {{ item.data.description }}
            {%- endif -%}
            </p>
        </div>
        {%- endif -%}
    <div>
</article>
