<article class="c-item | h-cite" id="webmention-{{ webmention['wm-id'] }}">

    <header class="o-prose c-item__header">
        <h3 class="u-overline">
        {%- if webmention.author.name -%}
            {{- webmention.author.name -}}
        {%- else -%}
            Anonymous
        {%- endif -%}
        </h3>
    </header>

    <div class="o-prose c-item__content | p-content">
        {% if webmention.content.html %}
            {{ webmention.content.html | safe }}
        {% elif webmention.content.text %}
            {{ webmention.content.text | safe }}
        {% endif %}
    </div>

    <footer class="c-footer c-item__footer u-reference">
        <div aria-hidden="true">
        {% if webmention.author.photo %}
            <img class="u-avatar | u-photo"
                src="{{ webmention.author.photo }}"
                alt="Avatar of {{ webmention.author.name }}">
        {% else %}
            <img class="u-avatar"
                src="https://api.adorable.io/avatars/150/{{ webmention.author.name | slugify }}"
                alt="Avatar generated by Adorable Avatars">
        {% endif %}
        </div>
        <div>
            <a class="p-author h-card u-url"
            href="{{ webmention.url }}"
            target="_blank"
            rel="noopener noreferrer"><span class="u-visually-hidden">Published the </span><time class="webmention__pubdate dt-published"
                datetime="{{ webmention.published }}">
                {{ webmention.published | date("YYYY-MM-DD")}} <span class="c-item__date-separator">&bull; </span>{{ webmention.published | date("HH:mm")}}
            </time></a>
        </div>
    </footer>

</article>
