<article class="o-switcher u-reference | h-cite" id="webmention-{{ webmention['wm-id'] }}">
    <div class="[ o-switcher__item o-switcher__item--big ] o-prose | p-content u-font-family:script">
        {% if webmention.content.html %}
            {{ webmention.content.html | safe }}
        {% elif webmention.content.text %}
            {{ webmention.content.text | safe }}
        {% endif %}
    </div>

    <footer class="o-switcher__item">
        <dl class="o-cluster">
            <div class="o-stack o-stack--space-3xs">
                <dt class="u-visually-hidden" aria-hidden="true">Avatar</dt>
                <dd aria-hidden="true">
                {% if webmention.author.photo %}
                    <img class="u-avatar | u-photo"
                        src="{{ webmention.author.photo }}">
                {% else %}
                    <img class="u-avatar"
                        src="https://api.adorable.io/avatars/150/{{ webmention.author.name | slug }}"
                        alt="Avatar generated by Adorable Avatars">
                {% endif %}
                </dd>
            </div>

            <div class="o-stack o-stack--space-3xs">
                <dt class="u-visually-hidden">Name</dt>
                <dd class="p-name">
                {% if webmention.author.name %}
                    {{ webmention.author.name }}
                {% else %}
                    Anonymous
                {% endif %}
                </dd>

                {% if webmention.published %}
                    <dt class="u-visually-hidden">Published</dt>
                    <dd>
                    <time class="webmention__pubdate dt-published"
                        datetime="{{ webmention.published }}">
                        {{ webmention.published | date("D MMM YYYY")}}
                    </time>
                    </dd>
                {% endif %}
                <dt class="u-visually-hidden">Url</dt>
                <dd>
                <a class="p-author h-card u-url"
                href="{{ webmention.url }}"
                target="_blank"
                rel="noopener noreferrer">
                    {{ webmention.url | hostname }}
                </a>
                </dd>
            </div>
        </dl>
    </footer>
</article>
