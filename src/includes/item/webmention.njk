<article class="o-stack o-stack--space-xs | h-cite" id="webmention-{{ webmention['wm-id'] }}">

    <header class="o-cluster o-cluster--xs">
        {% if webmention.author.photo %}
            <img class="u-avatar | u-photo"
                src="{{ webmention.author.photo }}"
                alt="Avatar of {{ webmention.author.name }}">
        {% else %}
            <img class="u-avatar"
                src="https://api.adorable.io/avatars/150/{{ webmention.author.name | slugify }}"
                alt="Avatar generated by Adorable Avatars">
        {% endif %}
        <div>
            {% if webmention.author.name %}
                <h3>{{ webmention.author.name }}</h3>
            {% else %}
                <h3>Anonymous</h3>
            {% endif %}
        </div>
    </header>

    <div class="o-prose | p-content u-font-family:script">
        {% if webmention.content.html %}
            {{ webmention.content.html | safe }}
        {% elif webmention.content.text %}
            {{ webmention.content.text | safe }}
        {% endif %}
    </div>

    <footer class="c-footer u-reference">
        <dl class="o-cluster o-cluster--xs">
            {% if webmention.published %}
                <dt class="u-visually-hidden">Published</dt>
                <dd>
                <time class="webmention__pubdate dt-published"
                    datetime="{{ webmention.published }}">
                    {{ webmention.published | date("D MMM YYYY")}}
                </time>
                </dd>
            {% endif %}
            <dt class="u-visually-hidden">Url</dt>
            <dd>
                <a class="p-author h-card u-url"
                href="{{ webmention.url }}"
                target="_blank"
                rel="noopener noreferrer">
                    {{ webmention.url | hostname }}
                </a>
            </dd>
        </dl>
    </footer>
</article>
