<header class="o-container o-box">
    <nav aria-label="Navigation">
        <h2 class="u-visually-hidden">Navigation</h2>
        <div class="o-cluster o-cluster--step-1 o-cluster--space-between">
            <a class="o-cluster o-cluster--step--2 c-logo"
               href="{{ "/" | url }}"
               rel="home" aria-hidden="true">
                <img src="{{ app.icon }}" class="c-logo__img"/>
                <span class="c-logo__text u-font-weight:bold"><span class="u-visually-hidden">Homepage of </span>alienlebarge</span>
            </a>
            {%- if navigation.primary -%}
            <div class="c-nav">
                <ul class="o-cluster o-cluster--step--2">
                    {%- for item in navigation.primary -%}
                    <li>
                        <a href="{{ item.url }}">{{ item.label }}</a>
                    </li>
                    {%- endfor -%}
                </ul>
            </div>
            {%- endif -%}
        </div>
    </nav>
</header>
