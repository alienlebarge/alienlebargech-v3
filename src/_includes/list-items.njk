{% macro listItems(items, modifier) %}
<ul class="{% if modifier %}{{ modifier }} {% endif %}o-stack o-stack--step-4">
    {%- for item in items -%}
    <li>
        {%- include 'item/' + item.data.type + '.njk' -%}
    </li>
    {%- endfor -%}
</ul>
{% endmacro %}



{% macro gridItems(items) %}

{%- set image_preset = "thumbnail" -%}
<ul class="[ c-container c-container--big ]">
    <div class="o-grid" data-min="9rem">
        {%- for item in items -%}
        <li>
        {%- include 'item/' + item.data.type + '.njk' -%}
        </li>
        {%- endfor -%}
    </div>
</ul>
{% endmacro %}
