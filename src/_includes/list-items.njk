{% macro listItems(items) %}
<div class="[ c-container c-container--big ] o-stack o-stack--s3 c-separator">
    {%- for item in items -%}
    {%- include 'item/' + item.data.type + '.njk' -%}
    {%- endfor -%}
</div>
{% endmacro %}



{% macro gridItems(items) %}

{%- set image_preset = "thumbnail" -%}
<div class="[ c-container c-container--big ] o-grid" data-min="9rem">
    {%- for item in items -%}
    {%- include 'item/' + item.data.type + '.njk' -%}
    {%- endfor -%}
</div>
{% endmacro %}
