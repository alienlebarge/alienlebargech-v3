<div class="[ o-box o-box--s1 ] c-content o-prose{% if vocab %} | e-content{% if type == "note" %} p-name{% endif %}{% endif %}">
    {{ content | safe }}

    {# add photo if there is any #}
    {% if photo %}
        {%- import 'image.njk' as image -%}
        {%- for item in photo -%}
        <figure>
            {{ image.image(item.url, item.alt, settings=srcsets.default) }}
            {%- if item.caption -%}
            <figcaption>{{ item.caption }}</figcaption>
            {%- endif -%}
        </figure>
        {%- endfor -%}
    {% endif %}
</div>
