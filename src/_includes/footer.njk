{% if date or bookmarkOf -%}
<footer class="c-footer">
    <dl class="[ o-stack o-stack--step--1 ]">
        {% if type == "like" %}
        <dt class="u-visually-hidden">Liked</dt>
        <dd>
            <a class="u-like-of u-lede c-background__text" rel="external" href="{{ bookmarkOf }}">
                {{ bookmarkOf | hostname }}
                <svg class="u-sup" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                    <path fill="currentColor" d="M400 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zm16 400c0 8.822-7.178 16-16 16H48c-8.822 0-16-7.178-16-16V80c0-8.822 7.178-16 16-16h352c8.822 0 16 7.178 16 16v352zM99.515 374.828c-4.686-4.686-4.686-12.284 0-16.971l195.15-195.15-.707-.707-89.958.342c-6.627 0-12-5.373-12-12v-9.999c0-6.628 5.372-12 12-12L340 128c6.627 0 12 5.372 12 12l-.343 136c0 6.627-5.373 12-12 12h-9.999c-6.627 0-12-5.373-12-12l.342-89.958-.707-.707-195.15 195.15c-4.686 4.686-12.284 4.686-16.971 0l-5.657-5.657z"/>
                </svg>
            </a>
        </dd>
        {% endif %}
        {% if type == "bookmark" -%}
        <dt class="u-visually-hidden">Bookmark</dt>
        <dd>
            <a class="u-bookmark-of u-lede c-background__text" rel="external" href="{{ bookmarkOf }}">
                {{ bookmarkOf | hostname }}
                <svg class="u-sup" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                    <path fill="currentColor" d="M400 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zm16 400c0 8.822-7.178 16-16 16H48c-8.822 0-16-7.178-16-16V80c0-8.822 7.178-16 16-16h352c8.822 0 16 7.178 16 16v352zM99.515 374.828c-4.686-4.686-4.686-12.284 0-16.971l195.15-195.15-.707-.707-89.958.342c-6.627 0-12-5.373-12-12v-9.999c0-6.628 5.372-12 12-12L340 128c6.627 0 12 5.372 12 12l-.343 136c0 6.627-5.373 12-12 12h-9.999c-6.627 0-12-5.373-12-12l.342-89.958-.707-.707-195.15 195.15c-4.686 4.686-12.284 4.686-16.971 0l-5.657-5.657z"/>
                </svg>
            </a>
        </dd>
        {%- endif %}
        {% if date -%}
        <dt class="u-visually-hidden">Published on</dt>
        <dd class="">
            <a{% if vocab %} class="u-url"{% endif %} href="{{ page.url | url }}">
                <time class="dt-published c-background__text"
                      datetime="{{ date | date(dates.iso) }}">{{ date | date(dates.datetime_full) }}</time>
            </a>
        </dd>
        {%- endif %}
        {% if syndication -%}
        <div class="o-cluster o-cluster--small">
            <div class="o-cluster__container c-background__text">
                <dt class="o-cluster__item">Also on</dt>
                {% for item in syndication %}
                <dd class="o-cluster__item">
                    <a{% if vocab %} class="u-url"{% endif %} href="{{ item }}">
                        {{ item }}
                    </a>
                </dd>
                {% endfor %}
            </div>
        </div>
        {%- endif %}
    </dl>
</footer>
{%- endif %}
