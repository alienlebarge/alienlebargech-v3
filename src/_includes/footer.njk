{% if date or bookmarkOf -%}
<footer class="c-footer">
    <dl class="[ o-stack o-stack--s-1 ]">
        {% if bookmarkOf -%}
        <dt class="u-visually-hidden">Bookmark</dt>
        <dd>
            <span class="c-background__text">
                <a class="u-bookmark-of" rel="external" href="{{ bookmarkOf }}">
                    {{ bookmarkOf | hostname }}
                </a>
                <svg class="c-footer__svg" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                    <path fill="currentColor" d="M400 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h352c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zm16 400c0 8.822-7.178 16-16 16H48c-8.822 0-16-7.178-16-16V80c0-8.822 7.178-16 16-16h352c8.822 0 16 7.178 16 16v352zM99.515 374.828c-4.686-4.686-4.686-12.284 0-16.971l195.15-195.15-.707-.707-89.958.342c-6.627 0-12-5.373-12-12v-9.999c0-6.628 5.372-12 12-12L340 128c6.627 0 12 5.372 12 12l-.343 136c0 6.627-5.373 12-12 12h-9.999c-6.627 0-12-5.373-12-12l.342-89.958-.707-.707-195.15 195.15c-4.686 4.686-12.284 4.686-16.971 0l-5.657-5.657z"/>
                </svg>
            </span>
        </dd>
        {%- endif %}
        {% if inReplyTo -%}
        <dt class="u-visually-hidden">In reply to</dt>
        <dd>
            <span class="c-background__text">
                <a class="u-in-reply-to" rel="external" href="#{{ inReplyTo }}">https://twitter.com/alienlebarge/status/1207563938063421440{{ inReplyTo }}</a>
                <svg class="c-footer__svg" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path fill="currentColor" d="M8.309 189.836L184.313 37.851C199.719 24.546 224 35.347 224 56.015v80.053c160.629 1.839 288 34.032 288 186.258 0 61.441-39.581 122.309-83.333 154.132-13.653 9.931-33.111-2.533-28.077-18.631 45.344-145.012-21.507-183.51-176.59-185.742V360c0 20.7-24.3 31.453-39.687 18.164l-176.004-152c-11.071-9.562-11.086-26.753 0-36.328z"/>
                </svg>
            </span>
        </dd>
        {%- endif %}
        {% if date -%}
        <dt class="u-visually-hidden">Published on</dt>
        <dd class="">
            <a{% if vocab %} class="u-url"{% endif %} href="{{ page.url | url }}">
                <time class="dt-published c-background__text"
                      datetime="{{ date | date(dates.iso) }}">{{ date | date(dates.datetime_full) }}</time>
            </a>
        </dd>
        {%- endif %}
    </dl>
</footer>
{%- endif %}
