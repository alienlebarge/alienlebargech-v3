{% macro footer(item) %}
<footer class="c-footer">
    <dl>
        <dt class="u-visually-hidden">Published on</dt>
        <dd>
        <a{% if vocab %} class="u-url"{% endif %} href="{{ item.url | url }}">
            {# TODO: use src/_data/dates.json to format the date. #}
            <time{% if vocab %} class="dt-published"{% endif %} datetime="{{ item.data | date }}">{{ item.date | date("D MMMM YYYY, HH:mm") }}</time>
        </a>
        </dd>
    </dl>
</footer>
{% endmacro %}
