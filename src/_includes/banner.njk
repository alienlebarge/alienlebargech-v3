<header class="c-banner">
    <div class="o-container">
        <nav class="c-navigation" aria-label="Navigation">
            <h2 class="u-visually-hidden">Navigation</h2>
            <div class="c-navigation__title">
                <a class="c-navigation__link" href="{{ "/" | url }}" rel="home">
                    <span class="u-visually-hidden">Homepage of </span>alienlebarge
                </a>
            </div>
            {%- if (navigation.primary) or (navigation.secondary) -%}
            <div class="c-navigation__pages">
                {%- if navigation.primary -%}
                <h2 class="u-visually-hidden">Primary Pages</h2>
                <ul class="o-list-inline">
                    {%- for item in navigation.primary -%}
                    <li class="o-list-inline__item">
                        <a class="c-navigation__link" href="{{ item.url }}">{{ item.label }}</a>
                    </li>
                    {%- endfor -%}
                </ul>
                {%- endif -%}
                {%- if navigation.secondary -%}
                <h2 class="u-visually-hidden">Secondary Pages</h2>
                <ul class="o-list-inline">
                    {%- for item in navigation.secondary -%}
                    <li class="o-list-inline__item">
                        <a class="c-navigation__link" href="{{ item.url }}">{{ item.label }}</a>
                    </li>
                    {%- endfor -%}
                </ul>
                {%- endif -%}
            </div>
            {%- endif -%}
        </nav>
    </div>
</header>
