{% set title %}Photo: {{ item.date | date(dates.datetime_full) }}{% endset %}
{% extends 'layouts/base.njk' %}
{% block main %}
    {% include 'footer.njk' %}
    {% include 'header.njk' %}
    {% include 'content.njk' %}

    <div class="[ o-box o-box--s1 ] o-stack">
        {%- for item in photo -%}
        {# IndieKit includes app.url in image path #}
        {%- set src -%}{{ item.url | replace(app.url, "") }}{%- endset -%}
        <figure>
            <img src="{{ src | url }}" alt="{{ item.alt }}" loading="lazy">
            {%- if item.caption -%}
            <figcaption>{{ item.caption }}</figcaption>
            {%- endif -%}
        </figure>
    {%- endfor -%}
    </div>
{% endblock %}
