<!doctype>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="{% if hidden == true %}noindex{% else %}index{% endif %}, follow">

        <link rel="me" href="https://twitter.com/alienlebarge">
        <link rel="me" href="https://mastodon.alienlebarge.ch/@alienlebarge">
        <link rel="me" href="https://github.com/alienlebarge">

        <link rel="stylesheet" href="{{ "/assets/styles/style.css" | url }}">

        <title>{{ title }}</title>
    </head>
    <body>
        {% import 'navigation.njk' as nav %}
        {{ nav.menu(navigation.primary) }}
        {{ nav.menu(navigation.secondary, title="Navigation secondary") }}
        <main>
            {% block main %}
                {{ layoutContent }}
            {% endblock %}
        </main>
        <footer>
            <a href="https://github.com/alienlebarge/snip/tree/master/{{ page.inputPath }}">Edit this page on GitHub</a>
        </footer>
    </body>
</html>
