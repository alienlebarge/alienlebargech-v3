<!doctype>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="{% if hidden == true %}noindex{% else %}index{% endif %}, follow">
    <link rel="stylesheet" href="{{ "/assets/styles/style.css" | url }}">
    <title>{{ title }}</title>
    </head>
    <body>
        {% import 'navigation.njk' as nav %}
        {{ nav.menu(navigation.primary) }}
        <main>
        {% block main %}
            {{ layoutContent }}
        {% endblock %}
        </main>
        <footer>
            <a href="https://github.com/alienlebarge/snip/tree/master/{{ page.inputPath }}">Edit this page on GitHub</a>
        </footer>
    </body>
</html>
